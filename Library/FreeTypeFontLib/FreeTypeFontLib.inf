[Defines]
  INF_VERSION                    = 0x00010005
  BASE_NAME                      = FreeTypeFontLib
  FILE_GUID                      = 1e737ca8-ae67-4ba4-a3c6-94a81dde4e3f
  MODULE_TYPE                    = BASE
