[BuildOptions]
  GCC:*_*_*_CC_FLAGS = -include $(WORKSPACE)/YaSetupPkg/Library/FreeTypeFontLib/FreeTypeWrapper/ft2build.h -I$(WORKSPACE)/YaSetupPkg/Library/FreeTypeFontLib/freetype/include
 MSFT:*_*_*_CC_FLAGS = /FI$(WORKSPACE)/YaSetupPkg/Library/FreeTypeFontLib/FreeTypeWrapper/ft2build.h /I$(WORKSPACE)/YaSetupPkg/Library/FreeTypeFontLib/freetype/include
